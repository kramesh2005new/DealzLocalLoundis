    <style type="text/css">
        .input-validation-error
        {
            border: 1px solid #ff0000 !important;
            background-color: #ffeeee !important;
        }

        .mbm
        {
            margin-bottom: 5px !important;
        }

        .myDialogClass .ui-widget-header
        {
            background: rgb(193,0,0);
        }

        .ui-dialog .ui-dialog-titlebar-close
        {
            background: white;
            color: Black;
            vertical-align: text-top;
            font-size: small !important;
        }

        .ui-button-text
        {
            text-indent: 0px !important;
            padding: 0px !important;
            font-family: !important;
        }

        .ui-icon-closethick
        {
            text-indent: 5px !important;
        }
    </style>
    <script type="text/javascript">
        function SignUpResult(data) {
            alert(data);

            document.getElementById('FirstName').value = '';
            document.getElementById('LastName').value = '';
            document.getElementById('EmailAddress').value = '';
            document.getElementById('BusinessName').value = '';
            document.getElementById('ContactNumber').value = '';

            $("#loading").css("display", "none");
            $("#bodyElt").css({ opacity: 1 });

        }
        function saveInit() {

            if ($("#formSignUp").valid()) {

                $("#loading").css("display", "block");
                $("#bodyElt").css({ opacity: 0.3 });
            }
            else {

                $("#msgBox").dialog({ modal: true });
                $("#msgBox").open();
                return false
            }
        }
        function clickContactUs() {
            $("#divContactUs").dialog({
                modal: true,
                title: 'Contact Us',
                width: "20%",
                height: "auto",
                dialogClass: "myDialogClass",
                closeText: "X"
            });
        }

    </script>
</head>
<body>
    <!----Header --------------->
    <div class="headerbg">
        <div class="pagewidth">
            <div class="logo"><a href="index.html" title="Deal Z Local"><span>Deal Z Local Logo</span></a></div>
            <div class="submenu">@Html.ActionLink("Home", "Index", "home")<span>|</span> @Html.ActionLink("Contact Us", "ContactUsIndex", "Trade")</div>
        </div>
    </div>
    <!----Header ends--------------->

    <!----Advertisement Starts--------------->
    <div class="pagewidth">
        <div class="tagname">
            <p>Cash &amp; Carrys and Offers locally!!!</p>
        </div>
    </div>
    <!----Advertisement ends--------------->



    <div class="pagewidthinner clearfix">
        <!----Form starts--------------->
        <div class="shoppingimg">
            <img src="@Url.Content("~/images/familyshop.jpg")" border="0" alt="" />
        </div>

        <div class="tradelogincntrn">
            <div class="formbox clearfix">

                <div class="registerform">
                    @using (Ajax.BeginForm("SignUp", "Trade", FormMethod.Post, new AjaxOptions { OnSuccess = "SignUpResult(data);", OnBegin = "saveInit();" }, new { @id = "formSignUp" }))
                    {
                        Html.EnableClientValidation(true);
                        Html.EnableUnobtrusiveJavaScript(true);
                        <h1>Sign Up</h1>
                        <div class="txtbox">
                            @Html.EditorFor(m => m.FirstName, new { @class = "jq_watermark" ,style = "display:none"})
                            @* <input type="text" class="jq_watermark" placeholder="First Name" />*@
                        </div>
                        <div class="txtbox">
                            @Html.EditorFor(m => m.LastName, new { @class = "jq_watermark" ,style = "display:none" })
                            @*<input type="text" class="jq_watermark" placeholder="Last Name" />*@
                        </div>
                        <div class="txtbox">
                            @Html.EditorFor(m => m.BusinessName, new { @class = "jq_watermark" ,style = "display:none" })
                            @*<input type="text" class="jq_watermark" placeholder="Name of Business" />*@
                        </div>
                        <div class="txtbox">
                            @Html.EditorFor(m => m.EmailAddress, new { @class = "jq_watermark" ,style = "display:none" })
                            @*<input type="text" class="jq_watermark" placeholder="Email Address" />*@
                        </div>
                        <div class="txtbox">
                            @Html.EditorFor(m => m.ContactNumber, new { @class = "jq_watermark" ,style = "display:none"})
                            @*<input type="text" class="jq_watermark" placeholder="Contact Number" />*@
                        </div>
                        <p>By clicking Sign Up, you agree to our Terms and that you have read our Data Use Policy , including our Cookie Use.</p>
                        <div class="sbmtbtn clearfix">
                            <input id="btnSignUp" type="submit" value="Sign Up" class="submitbtn" />
                        </div>
    
 
                    }
                </div>
            </div>
        </div>

        <!----Form ends--------------->
    </div>
    <!----Contents ends--------------->
