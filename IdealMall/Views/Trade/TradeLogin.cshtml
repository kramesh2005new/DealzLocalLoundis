        function MandateLogIn() {

            if ($("#formSignIn").valid()) {
                $("#loading").css("display", "block");
                $("#bodyElt").css({ opacity: 0.3 });
            }
            else {

                return false;
            }
        }

        function LogIn(data) {
            if (data == "true") {
                location.href = '@Url.Action("TradeIndex", "Trade")';
            }

            else {
                alert(data);
                $("#loading").css("display", "none");
                $("#bodyElt").css({ opacity: 1 });


            }
        }
        function ErrorLogin() {
            alert("Error Validating Credentials!");
            $("#loading").css("display", "none");
