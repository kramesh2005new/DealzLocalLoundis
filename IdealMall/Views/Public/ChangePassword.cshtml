<script language="Javascript">
    function ValidateChangePassword() {
        
        debbuger;

        if ($("#Password").val() == "" || $("#NewPassword").val() == "" || $("#ConfirmPassword").val() == "" || $("#UserName").val() == "") {
            alert("Please enter the mandatory fields.");
            return false;
        }

        if ($("#Password").val() == $("#NewPassword").val()) {
            alert("New Password and Old Password should not be same!");
            $("#loading").css("display", "none");
            return false;
        }
        else if ($("#ConfirmPassword").val() != $("#NewPassword").val()) {
            alert("New Password does not match with Confirm Password!");
            $("#loading").css("display", "none");
            return false;
        }
        else {
            $("#loading").css("display", "block");
            $.ajax({
                cache: false,
                async: false,
                type: "POST",
                url: "/Public/ChangePassword",
                data: {
                    "username": $("#UserName").val(),
                    "password": $("#Password").val(),
                    "newpassword": $("#NewPassword").val(),
                    "confirmpassword": $("#ConfirmPassword").val(),
                },
                success: function (data) {
                    success(data);
                    $("#loading").css("display", "none");
                    window.location.href = "@(Url.Action("LoginIndex", "Home"))";
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert("Error changing password!");
                    $("#loading").css("display", "none");
                    window.location.href = "@(Url.Action("ChangePasswordIndex", "Public"))";
                }
            });
        }

}
function success(data) {

    alert(data);
}

</script>

