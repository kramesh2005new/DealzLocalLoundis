function ccclick() {
        
        $("#loading").css("display", "block");
        $("#searchresult").css({ opacity: 0.3 });

        $.ajax({
            async: false,
            cache: false,
            type: "GET",
            url: "/PublicShopping/Index/" + $(this).find("input").val(),
            data: null,
            success: function (data) {
                
                $("#searchresult").html(data);
                $("#loading").css("display", "none");
                $("#searchresult").css({ opacity: 1 });

            }
        });
    }
</script>